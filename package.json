{
  "name": "@h3mantd/ip-kit",
  "version": "1.0.0",
  "description": "Class-based IPv4/IPv6 toolkit for JS/TS: CIDR math, ranges, allocator, trie â€” bigint + generators.",
  "type": "module",
  "license": "MIT",
  "author": "h3mantd",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/h3mantD/ip-kit.git"
  },
  "homepage": "https://github.com/h3mantD/ip-kit#readme",
  "bugs": {
    "url": "https://github.com/h3mantD/ip-kit/issues"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean --tsconfig tsconfig.build.json",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch --tsconfig tsconfig.build.json",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "tsup src/index.ts --dts --format esm,cjs --clean",
    "changeset": "changeset",
    "version-packages": "changeset version && pnpm install --no-frozen-lockfile && pnpm build",
    "release": "changeset publish"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ip",
    "ipv4",
    "ipv6",
    "cidr",
    "subnet",
    "range",
    "rangeset",
    "allocator",
    "trie",
    "radix",
    "patricia",
    "bigint"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@types/node": "^24.3.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "c8": "^8.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
